{
  "extends": ["stylelint-config-recommended-scss", "stylelint-config-prettier"],
  "rules": {
    "selector-type-no-unknown": [
      true,
      {
        "ignoreTypes": ["/^app-/", "/^mat-/"]
      }
    ],
    "selector-pseudo-class-no-unknown": null,
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": ["ng-deep"]
      }
    ]
  }
}
